#include <iostream>

/*
1.4. Задача 1.7.[1] Да се напише програма, която намира лицето на триъгълник по дадени: 
а) дължини на страна и височина към нея; 
б) три страни.
*/

int main() {

    /* a)
    // Въведете дължина на страната и височина към нея
    double side, height;
    std::cout << "Въведете дължина на страната: ";
    std::cin >> side;
    std::cout << "Въведете височината към нея: ";
    std::cin >> height;

    // Изчислете лицето на триъгълника
    double area = 0.5 * side * height;

    // Изведете резултата
    std::cout << "Лицето на триъгълника е: " << area << std::endl;
    */

    // б)

    // Въведете дължините на трите страни
    double a, b, c;
    std::cout << "Въведете дължина на страна a: ";
    std::cin >> a;
    std::cout << "Въведете дължина на страна b: ";
    std::cin >> b;
    std::cout << "Въведете дължина на страна c: ";
    std::cin >> c;

    // Изчислете полупериметъра
    double s = (a + b + c) / 2;

    // Изчислете лицето на триъгълника използвайки формулата на Херон
    double area = sqrt(s * (s - a) * (s - b) * (s - c));

    // Изведете резултата
    std::cout << "Лицето на триъгълника е: " << area << std::endl;
	
	return 0;
}
