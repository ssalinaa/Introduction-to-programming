#include <iostream>

/*
1.5. Задача 2.7.[1] Да се напише програма, която въвежда координатите на
точка от равнина и извежда на кой квадрант принадлежи тя. Да се разгледат случаите, когато точката принадлежи на някоя от координатните
оси или съвпада с центъра на координатната система.
*/

int main() {

    double x, y;

    // Въвеждане на координатите на точката
    std::cout << "Въведете x-координата: ";
    std::cin >> x;
    std::cout << "Въведете y-координата: ";
    std::cin >> y;

    // Проверка на координатите и определяне на квадранта
    if (x == 0 && y == 0) {
        std::cout << "Точката лежи в центъра на координатната система." << std::endl;
    }
    else if (x == 0) {
        std::cout << "Точката лежи на координатната ос Y." << std::endl;
    }
    else if (y == 0) {
        std::cout << "Точката лежи на координатната ос X." << std::endl;
    }
    else if (x > 0 && y > 0) {
        std::cout << "Точката принадлежи на първи квадрант." << std::endl;
    }
    else if (x < 0 && y > 0) {
        std::cout << "Точката принадлежи на втори квадрант." << std::endl;
    }
    else if (x < 0 && y < 0) {
        std::cout << "Точката принадлежи на трети квадрант." << std::endl;
    }
    else {
        std::cout << "Точката принадлежи на четвърти квадрант." << std::endl;
    }

	return 0;
}
