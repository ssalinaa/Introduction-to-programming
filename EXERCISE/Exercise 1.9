#include <iostream>
#include <cmath>

/*
 1.9. Задача 2.40.[1] Да се напише програма, която (чрез цикъл for) намира
сумата на всяко трето цяло число, започвайки от 2 и ненадминавайки n
(т.е. сумата 2 + 5 + 8 + 11 + ...).
*/

int main() {

    int n;
    std::cout << "Въведете цяло число n: ";
    std::cin >> n;

    int sum = 0;

    for (int i = 2; i <= n; i += 3) {

        sum += i;
    }

    std::cout << "Сумата на всяко трето цяло число от 2 до " << n << " е: " << sum << std::endl;

    return 0;
}
