#include <iostream>
#include <cmath>

/* 1.8. Задача 1.20.[1] Да се напише програма, която по въведени от клавиатурата цели числа x и k (k ≥ 1) намира и извежда на екрана k-тата цифра
на х. Броенето да е отдясно наляво.
*/

int main() {
    int x, k;

    // Въвеждане на числото x и позицията k
    std::cout << "Въведете цяло число x: ";
    std::cin >> x;

    std::cout << "Въведете позиция k (k >= 1): ";
    std::cin >> k;

    // Проверка дали k е валидна (положителна) стойност
    if (k < 1) {
        std::cout << "Позицията k трябва да бъде поне 1." << std::endl;
        return 1; // Изход с грешка
    }

    // Преобразуване на числото x в положително число (ако е отрицателно)
    x = std::abs(x);

    // Намиране и извеждане на k-тата цифра, броейки отдясно наляво
    int digit;
    while (k > 0 && x > 0) {
        digit = x % 10;
        x /= 10;
        k--;
    }

    if (k == 0) {
        std::cout << "k-тата цифра от дясно наляво на числото е: " << digit << std::endl;
    }
    else {
        std::cout << "Позицията k надвишава броя на цифрите в числото." << std::endl;
    }

    return 0;
}
